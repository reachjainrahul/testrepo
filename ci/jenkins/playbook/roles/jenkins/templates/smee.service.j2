[Unit]
Description=smee to forward github webhook to localhost Jenkins
After=network-online.target firewalld.service
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/smee -u {{ smee_channel }} --path /ghprbhook/ --port 8080
RestartSec=2
StartLimitBurst=3
StartLimitInterval=60s
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity

[Install]
WantedBy=multi-user.target
